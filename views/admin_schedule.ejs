<!DOCTYPE html>
<% include admin_top %>
<div id="wrapper">
<% include admin_menu %>
    <div id="page-wrapper">
<script type="text/javascript">
    $(function() {
    $( "#showday" ).datepicker({  minDate: new Date() });
  });
</script>
    
